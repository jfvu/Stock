<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_activity_member"
    tools:context="com.example.administrator.stock.ui.activity.MemberActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_member"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_member"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000"
        android:layout_below="@id/ll_status_activity_member">
        <RelativeLayout
            android:id="@+id/img_return_activity_member"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="13px"
                android:layout_height="22px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的会员"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_show_activity_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能介绍"
        android:textColor="#FFFF0000"
        android:textSize="14px"
        android:layout_below="@id/rl_title_activity_member"
        android:layout_marginLeft="12px"
        android:layout_marginTop="8px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show_activity_member"
        android:layout_marginTop="8px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_member_et"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_member_et"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_member_et"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_member_et"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_member_et"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_member_et"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72px">
        <LinearLayout
            android:id="@+id/ll_vip3_activity_member"
            android:layout_width="wrap_content"
            android:layout_height="44px"
            android:layout_weight="1"
            android:background="@drawable/shape_member_ll"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="16px"
                android:layout_height="14px"
                android:src="@drawable/member_3"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP3"
                android:textColor="#FFFF0000"
                android:textSize="16px"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_vip4_activity_member"
            android:layout_width="wrap_content"
            android:layout_height="44px"
            android:layout_weight="1"
            android:background="@drawable/shape_member_ll"
            android:orientation="horizontal"
            android:layout_marginLeft="33px"
            android:gravity="center">
            <ImageView
                android:layout_width="16px"
                android:layout_height="14px"
                android:src="@drawable/member_4"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP4"
                android:textColor="#FFFF0000"
                android:textSize="16px"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3px"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140px">
        <LinearLayout
            android:id="@+id/ll_vip1_activity_member"
            android:layout_width="wrap_content"
            android:layout_height="44px"
            android:layout_weight="1"
            android:background="@drawable/shape_member_ll"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="16px"
                android:layout_height="14px"
                android:src="@drawable/member_1"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP1"
                android:textColor="#FFFF0000"
                android:textSize="16px"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_vip2_activity_member"
            android:layout_width="wrap_content"
            android:layout_height="44px"
            android:layout_weight="1"
            android:background="@drawable/shape_member_ll"
            android:orientation="horizontal"
            android:layout_marginLeft="33px"
            android:gravity="center">
            <ImageView
                android:layout_width="16px"
                android:layout_height="14px"
                android:src="@drawable/member_2"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP2"
                android:textColor="#FFFF0000"
                android:textSize="16px"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3px"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
