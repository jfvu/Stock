<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.CreateTacticsActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_createtactics"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <RelativeLayout
            android:id="@+id/img_return_activity_createtactics"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="13px"
                android:layout_height="22px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="策略创建"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="8px"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称："
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_marginLeft="13px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="XXXX"
            android:textColorHint="#E6121212"
            android:textSize="14px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介："
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_marginLeft="13px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="XXXX"
            android:textColorHint="#E6121212"
            android:textSize="14px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初始资金："
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_marginLeft="13px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="XXXX"
            android:textColorHint="#E6121212"
            android:textSize="14px"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_create"
        android:layout_width="147px"
        android:layout_height="44px"
        android:background="@drawable/shape_login2"
        android:text="创建"
        android:textColor="#FFFF0000"
        android:textSize="16px"
        android:gravity="center"
        android:layout_marginTop="305px"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
