<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.ShareActivity"
    android:background="#ffffff">
<LinearLayout
    android:id="@+id/ll_status_activity_share"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <ImageView
            android:id="@+id/img_return_activity_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享好友"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_logo"
        android:layout_marginTop="52px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请好友参与，好友注册成功"
        android:textColor="#FF1A1A1A"
        android:textSize="14px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您和好友将获得5个金币奖励"
        android:textColor="#FF000000"
        android:textSize="18px"
        android:layout_marginTop="2px"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#f8f8f8"
        android:layout_marginTop="32px"></ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟好友说点什么吧"
            android:textColor="#FF323232"
            android:textSize="14px"
            android:layout_marginLeft="16px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f8f8f8"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:background="@null"
            android:hint="内容内容内容"
            android:textColorHint="#FF323232"
            android:gravity="start"
            android:textSize="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8">
        <Button
            android:id="@+id/btn_share_activity_share"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56px"
            android:layout_marginLeft="77px"
            android:layout_marginRight="77px"
            android:background="@drawable/shape_login"
            android:text="邀请好友"
            android:textColor="#FFFF0000"
            android:textSize="18px"/>
    </RelativeLayout>
</LinearLayout>
