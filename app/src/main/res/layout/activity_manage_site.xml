<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.ManageSiteActivity">
<LinearLayout
    android:id="@+id/ll_status_activity_managesite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <ImageView
            android:id="@+id/img_return_activity_managesite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仓位管理"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仓位管理"
        android:textColor="#FFFF0000"
        android:textSize="14px"
        android:layout_marginTop="8px"
        android:layout_marginLeft="12px"
        android:layout_marginBottom="8px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:orientation="horizontal">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12px"
        android:background="@drawable/main_card"
        android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容内容内容内容"
                android:textColor="#E6121212"
                android:textSize="14px"
                android:layout_marginLeft="15px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/img_open_activity_managesite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/all_up"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="14px"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_change_activity_managesite"
            android:layout_width="77px"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_buy_message"
            android:layout_marginRight="12px"
            android:layout_marginLeft="8px"
            android:text="修改参数"
            android:textColor="#FFFF0000"
            android:textSize="14px"/>
    </LinearLayout>
</LinearLayout>
