<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
              android:orientation="vertical"
                android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_center_fragment_hushen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
</android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/rl_list_fragment_hushen"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/rl_listopen_fragment_hushen"
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_marginLeft="7px">
                <ImageView
                    android:id="@+id/img_listopen_fragment_hushen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/price_open"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨幅榜"
            android:textColor="#E6121212"
            android:textSize="12px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27px"/>
        <ImageView
            android:id="@+id/img_listmore_fragment_hushen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/price_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12px"
            />
    </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_list_fragment_hushen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/img_view_list_fragment_hushen"
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#f8f8f8"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/rl_riseopen_fragment_hushen"
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_marginLeft="7px">
            <ImageView
                android:id="@+id/img_riseopen_fragment_hushen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_open"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速涨幅"
            android:textColor="#E6121212"
            android:textSize="12px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27px"/>
        <ImageView
            android:id="@+id/img_risemore_fragment_hushen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/price_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12px"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_rise_fragment_hushen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/img_view_rise_fragment_hushen"
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#f8f8f8"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/rl_fallopen_fragment_hushen"
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_marginLeft="7px">
            <ImageView
                android:id="@+id/img_fallopen_fragment_hushen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_open"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速跌幅"
            android:textColor="#E6121212"
            android:textSize="12px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27px"/>
        <ImageView
            android:id="@+id/img_fallmore_fragment_hushen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/price_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12px"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fall_fragment_hushen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/img_view_fall_fragment_hushen"
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#f8f8f8"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>