<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.ForgetPassWordActivity">
<LinearLayout
    android:id="@+id/ll_status_activity_forgetpassword"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_below="@id/ll_status_activity_forgetpassword"
        android:background="#ff0000">
        <ImageView
            android:id="@+id/img_return_activity_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_title_activity_forgetpassword"
        android:layout_marginTop="44px"
        android:background="@drawable/login_logo"/>
    <LinearLayout
        android:id="@+id/ll_zhanghu_activity_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_activity_forgetpassword"
        android:orientation="vertical"
        android:layout_marginTop="196px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@drawable/login_zhanghu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="#40121212"
                android:textSize="17px"
                android:layout_centerVertical="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#40323232"
            android:layout_marginTop="5px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rl_title_activity_forgetpassword"
        android:layout_marginTop="242px"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textSize="17px"
                android:hint="请输入验证码"
                android:textColorHint="#40121212"/>
            <ImageView
                android:layout_width="128px"
                android:layout_height="1px"
                android:background="#40323232"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_getcode_activity_forgetpassword"
            android:layout_width="100px"
            android:layout_height="30px"
            android:background="@drawable/shape_login"
            android:text="获取验证码"
            android:textColor="#FFFF0000"
            android:textSize="14px"
            android:layout_marginLeft="16px"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mima_activity_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_activity_forgetpassword"
        android:orientation="vertical"
        android:layout_marginTop="288px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@drawable/login_mima"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="#40121212"
                android:textSize="17px"
                android:layout_centerVertical="true"

                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#40323232"
            android:layout_marginTop="5px"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_finish_activity_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginRight="78px"
        android:layout_marginLeft="78px"
        android:layout_below="@id/rl_title_activity_forgetpassword"
        android:layout_marginTop="382px"
        android:background="@drawable/shape_login"
        android:text="完成修改"
        android:textColor="#FFFF0000"
        android:textSize="18px"/>
</RelativeLayout>
