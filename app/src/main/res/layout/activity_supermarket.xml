<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.SupermarketActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_supermarket"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <RelativeLayout
            android:id="@+id/img_return_activity_supermarket"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="13px"
                android:layout_height="22px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术超市"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_ranking_activity_supermarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:padding="12px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_supermarket"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="#ffffff"
        app:tabIndicatorHeight="0px"
        app:tabTextColor="#40121212"
        app:tabSelectedTextColor="#ff0000"
        app:tabMode="scrollable">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_supermarket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
