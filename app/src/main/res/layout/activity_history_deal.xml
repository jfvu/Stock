<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.HistoryDealActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_historydeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <RelativeLayout
            android:id="@+id/rl_return_activity_historydeal"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="13px"
                android:layout_height="22px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史成交"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:background="#ffffff"
        android:layout_marginTop="8px"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_time_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始时间"
                android:textColor="#E6121212"
                android:textSize="14px"/>
            <TextView
                android:id="@+id/tv_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-09"
                android:textColor="#CC323232"
                android:textSize="12px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1px"
            android:layout_height="56px"
            android:background="#1a6b6b6b"
            android:layout_marginTop="5px"/>
        <LinearLayout
            android:id="@+id/ll_time_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始时间"
                android:textColor="#E6121212"
                android:textSize="14px"/>
            <TextView
                android:id="@+id/tv_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-09"
                android:textColor="#CC323232"
                android:textSize="12px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#ffffff"
        android:layout_marginTop="8px"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="证券名称"
        android:textColor="#E6121212"
        android:textSize="14px"
        android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格/操作"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成交数量"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成交时间"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:gravity="center"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_historydeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
