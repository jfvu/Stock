<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px">
<Button
    android:id="@+id/btn_cancle_matchshare"
    android:layout_width="match_parent"
    android:layout_height="57px"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="15px"
    android:background="@drawable/shape_cancle"
    android:text="取消"
    android:textColor="#FF212121"
    android:textSize="20px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@drawable/shape_cancle"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_qq_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="48px"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/ms_qq"
                    android:layout_marginTop="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="#CC6B6B6B"
                    android:textSize="14px"
                    android:layout_marginTop="3px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wx_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/ms_wx"
                    android:layout_marginTop="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="#CC6B6B6B"
                    android:textSize="14px"
                    android:layout_marginTop="3px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wb_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="48px"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/ms_wb"
                    android:layout_marginTop="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微博"
                    android:textColor="#CC6B6B6B"
                    android:textSize="14px"
                    android:layout_marginTop="3px"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_space_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="48px"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/ms_space"
                    android:layout_marginTop="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    android:textColor="#CC6B6B6B"
                    android:textSize="14px"
                    android:layout_marginTop="3px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_friend_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="0.9">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/ms_friend"
                    android:layout_marginTop="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:textColor="#CC6B6B6B"
                    android:textSize="14px"
                    android:layout_marginTop="3px"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_copy_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="48px"
                android:layout_weight="0.95">
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/ms_copy"
                    android:layout_marginTop="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制链接"
                    android:textColor="#CC6B6B6B"
                    android:textSize="14px"
                    android:layout_marginTop="3px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>