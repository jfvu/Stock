<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.RoomActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_room"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <ImageView
            android:id="@+id/img_return_activity_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX大牛"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/img_seach_activity_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/price_seach"
            android:layout_alignParentRight="true"
            android:padding="12px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="218px"
        android:background="@drawable/invite_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="粉丝数：123453人"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:layout_marginTop="8px"
            android:layout_marginRight="12px"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42px"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="64px"
                android:layout_height="64px"
                android:src="@drawable/main_head"
                android:layout_centerHorizontal="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="飞翔的企鹅"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16px"/>
                <ImageView
                    android:layout_width="10.5px"
                    android:layout_height="10.5px"
                    android:src="@drawable/room_vip"
                    android:layout_marginLeft="3px"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:885213390"
                android:textColor="#FFFFFFFF"
                android:textSize="12px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_marginTop="170px">
    <Button
        android:id="@+id/btn_attention"
        android:layout_width="60px"
        android:layout_height="24px"
        android:background="@drawable/shape_roombtn"
        android:text="关注"
        android:textColor="#FFFFFFFF"
        android:textSize="12px"/>
    <Button
        android:id="@+id/btn_collect"
        android:layout_width="60px"
        android:layout_height="24px"
        android:background="@drawable/shape_roombtn"
        android:layout_marginLeft="63px"
        android:text="收藏"
        android:textColor="#FFFFFFFF"
        android:textSize="12px"/>
</LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61px"
        android:background="#ffffff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30天收益"
                android:textColor="#40121212"
                android:textSize="12px"
                android:layout_marginTop="12px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1937"
                android:textColor="#E6121212"
                android:textSize="14px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日收益"
                android:textColor="#40121212"
                android:textSize="12px"
                android:layout_marginTop="12px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.37"
                android:textColor="#E6121212"
                android:textSize="14px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总收益"
                android:textColor="#40121212"
                android:textSize="12px"
                android:layout_marginTop="12px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2121"
                android:textColor="#E6121212"
                android:textSize="14px"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史收益"
                android:textColor="#FFFF0000"
                android:textSize="14px"
                android:layout_marginTop="8px"
                android:layout_marginLeft="12px"
                android:layout_marginBottom="8px"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="201px"
                android:background="@drawable/a_stock"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35px"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="股票"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="盈亏率"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="持股天数"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="买入日期"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="12px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保隆科技"
                        android:textColor="#FFFF0000"
                        android:textSize="12px"
                        android:layout_marginTop="8px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="876543"
                        android:textColor="#FFEC2D45"
                        android:textSize="10px"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20.57%"
                    android:textColor="#FFFF0000"
                    android:textSize="12px"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="15天"
                    android:textColor="#FFFF0000"
                    android:textSize="12px"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2017.06.25"
                    android:textColor="#FFFF0000"
                    android:textSize="12px"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入理由"
                android:textColor="#FFFF0000"
                android:textSize="14px"
                android:layout_marginTop="8px"
                android:layout_marginLeft="12px"
                android:layout_marginBottom="8px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="#ffffff"></RelativeLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="36px"
                android:layout_marginTop="8px"
                android:background="#ffffff"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="直播"
                    android:textColor="@drawable/select_member_checkfont"
                    android:textSize="28px"
                    android:gravity="center"
                    android:background="@drawable/select_aitabin"/>
                <RadioButton
                    android:id="@+id/rb_delicacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="精品内参"
                    android:textColor="@drawable/select_member_checkfont"
                    android:textSize="28px"
                    android:gravity="center"
                    android:background="@drawable/select_aitabin"/>
                <RadioButton
                    android:id="@+id/rb_diagnose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="诊股"
                    android:textColor="@drawable/select_member_checkfont"
                    android:textSize="28px"
                    android:gravity="center"
                    android:background="@drawable/select_aitabin"/>
            </RadioGroup>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="229px">
    <Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:layout_alignParentBottom="true"
        android:background="#ff0000"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginBottom="45px"
        android:text="我要加入（当前直播间125人）/开启直播间"
        android:textColor="#FFFFFFFF"
        android:textSize="12px"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/room_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46px"/>
</RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
