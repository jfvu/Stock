<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.TacticsTestActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_tacticstest"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <RelativeLayout
            android:id="@+id/img_return_activity_ticticstest"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="13px"
                android:layout_height="22px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="策略测试"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_save_activity_tacticstest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:padding="10px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:background="@drawable/main_card"
        android:layout_marginTop="8px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12px"
            android:layout_marginLeft="12px"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:src="@drawable/invite_head"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布人"
                android:textColor="#E6121212"
                android:textSize="8px"
                android:layout_marginTop="8px"/>
        </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="策略名"
    android:textColor="#E6121212"
    android:textSize="16px"
    android:layout_marginTop="16px"
    android:layout_marginLeft="56px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间:2016.06.26"
            android:textColor="#40121212"
            android:textSize="12px"
            android:layout_marginTop="43px"
            android:layout_marginLeft="56px"/>
        <LinearLayout
            android:id="@+id/ll_release"
            android:layout_width="81px"
            android:layout_height="30px"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_buy_message"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12px"
            android:layout_marginRight="12px"
            >
            <ImageView
                android:layout_width="12px"
                android:layout_height="12px"
                android:src="@drawable/test_send"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textColor="#FFFF0000"
                android:textSize="12px"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="990金币/季度"
            android:textColor="#FFF6A623"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="47px"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_tacticstest"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="#ffffff"
        android:layout_marginTop="8px"
        app:tabIndicatorHeight="3px"
        app:tabIndicatorColor="#ff0000"
        app:tabTextColor="#40121212"
        app:tabSelectedTextColor="#ff0000"
        app:tabMode="fixed"
        ></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_activity_tacticstest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>


</LinearLayout>
