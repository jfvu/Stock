<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.AccountActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A股"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/img_refresh_activity_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/price_refresh"
            android:padding="13px"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="35px"
            android:layout_height="35px"
            android:background="@drawable/item_open_logo"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="长城\n证券"
            android:textColor="#FFFFFFFF"
            android:textSize="10px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长城证券(800001)"
            android:textColor="#E6121212"
            android:textSize="12px"
            android:layout_marginTop="6px"
            android:layout_marginLeft="52px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资金账户：9032123456705"
            android:textColor="#E6121212"
            android:textSize="9px"
            android:layout_marginTop="28px"
            android:layout_marginLeft="52px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginTop="8px"
        android:orientation="vertical"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总资产"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:layout_marginTop="8px"
                    android:layout_marginLeft="12px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9,209.38"
                    android:textColor="#E6121212"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总盈亏"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:layout_marginTop="8px"
                    android:layout_marginLeft="12px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-1,209.38"
                    android:textColor="#FF7ED321"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总市值"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:layout_marginTop="8px"
                    android:layout_marginLeft="12px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,502.00"
                    android:textColor="#E6121212"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当日盈亏参考率"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:layout_marginTop="8px"
                    android:layout_marginLeft="12px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+71.67"
                    android:textColor="#FFFF0000"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_marginTop="8px"
        android:background="#ffffff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/account_1"
                android:layout_marginTop="15px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textColor="#FFFF0000"
                android:textSize="10px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/account_2"
                android:layout_marginTop="15px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖出"
                android:textColor="#E6121212"
                android:textSize="10px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/account_3"
                android:layout_marginTop="15px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="撤单"
                android:textColor="#E6121212"
                android:textSize="10px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/account_4"
                android:layout_marginTop="15px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持仓"
                android:textColor="#E6121212"
                android:textSize="10px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/account_5"
                android:layout_marginTop="15px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textColor="#E6121212"
                android:textSize="10px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </ScrollView>

</LinearLayout>
