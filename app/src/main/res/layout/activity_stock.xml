<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.StockActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_stock"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000"
        android:layout_below="@id/ll_status_activity_stock">
        <RelativeLayout
            android:id="@+id/img_return_activity_stock"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="13px"
                android:layout_height="22px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单个股票"
                android:textSize="14px"
                android:gravity="center"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（800001）"
                android:textSize="12px"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_refresh_activity_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/price_refresh"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="13px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@drawable/stock_1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@drawable/stock_1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@drawable/stock_3"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_4"
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@drawable/stock_4"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
