<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="116px"
    android:background="#ffffff"
    android:layout_marginTop="1px">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="12px"
    android:layout_marginTop="12px">
    <ImageView
        android:layout_width="44px"
        android:layout_height="44px"
        android:src="@drawable/invite_head"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小仙女"
            android:textColor="#E6121212"
            android:textSize="16px"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10px"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2楼"
               android:textColor="#66323232"
               android:textSize="10px"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="05.27 20:11"
               android:textColor="#66323232"
               android:textSize="10px"/>
       </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容内容内容内容"
        android:textColor="#CC323232"
        android:textSize="14px"
        android:layout_marginLeft="12px"
        android:layout_marginTop="8px"/>
    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end">
        <ImageView
            android:layout_width="13px"
            android:layout_height="12px"
            android:src="@drawable/history_3"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="#40323232"
            android:textSize="12px"
            android:layout_marginRight="12px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5px"/>
    </LinearLayout>
</LinearLayout>