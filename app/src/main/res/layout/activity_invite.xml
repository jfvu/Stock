<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.stock.ui.activity.InviteActivity">
<LinearLayout
    android:id="@+id/ll_status_activity_invite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <ImageView
            android:id="@+id/img_return_activity_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请您加入XX APP"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:background="@drawable/invite_bg"
    android:orientation="vertical">
    <ImageView
        android:layout_width="96px"
        android:layout_height="96px"
        android:src="@drawable/invite_head"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24px"
        android:text="接受XX用户的邀请\n参与体验XX App服务"
        android:textColor="#FFFFFFFF"
        android:textSize="14px"/>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="181px"
                android:background="#f8f8f8"
                android:orientation="vertical">
<EditText
    android:layout_width="match_parent"
    android:layout_height="36px"
    android:background="@drawable/invite_btn1"
    android:layout_marginTop="33px"
    android:layout_marginRight="67px"
    android:layout_marginLeft="67px"
    android:hint="输入手机号接受邀请"
    android:textColorHint="#40121212"
    android:gravity="center"
    android:textSize="14px"/>
                <Button
                    android:id="@+id/btn_download_activity_invite"
                    android:layout_width="match_parent"
                    android:layout_height="36px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/invite_btn2"
                    android:layout_marginLeft="67px"
                    android:layout_marginRight="67px"
                    android:text="下载XX APP"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX超赞大牛说"
                    android:textColor="#E6121212"
                    android:textSize="18px"
                    android:layout_marginTop="16px"
                    android:layout_marginBottom="7px"
                    android:layout_gravity="center_horizontal"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_activity_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
