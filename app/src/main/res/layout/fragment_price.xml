<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#f8f8f8">
<RelativeLayout
    android:id="@+id/rl_title_fragment_price"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#ff0000">
<ImageView
    android:id="@+id/img_seach_fragemnt_price"
    android:layout_width="16px"
    android:layout_height="match_parent"
    android:src="@drawable/price_seach"
    android:layout_centerVertical="true"
    android:layout_marginLeft="13px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="行情"
        android:textColor="#FFFFFFFF"
        android:textSize="17px"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/img_refresh_fragemnt_price"
        android:layout_width="16px"
        android:layout_height="match_parent"
        android:src="@drawable/price_refresh"

        android:layout_marginRight="13px"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_fragment_price"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_below="@id/rl_title_fragment_price"
        android:background="#ffffff"
        android:layout_marginTop="1px"
        app:tabSelectedTextColor="#ff0000"
        app:tabTextColor="#40121212"
        app:tabMode="fixed"
        app:tabIndicatorHeight="3px"
        app:tabIndicatorColor="#ff0000">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_fragment_price">
    </android.support.v4.view.ViewPager>
</RelativeLayout>