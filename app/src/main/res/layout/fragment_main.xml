<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="#f8f8f8">
<RelativeLayout
    android:id="@+id/rl_title_fragment_main"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#ff0000">
<ImageView
    android:id="@+id/img_head_fragment_main"
    android:layout_width="24px"
    android:layout_height="24px"
    android:layout_centerVertical="true"
    android:src="@drawable/main_head"
    android:layout_marginLeft="12px"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:layout_marginLeft="72px"
        android:layout_marginRight="72px"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_main_seach"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="搜索名称、代码、策略..."
            android:textColorHint="#40121212"
            android:gravity="center"
            android:textSize="12px"/>
    </RelativeLayout>

</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@id/rl_title_fragment_main">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_main"
        android:layout_width="match_parent"
        android:layout_height="180px"
        >
    </android.support.v4.view.ViewPager>
            <LinearLayout
                android:id="@+id/lin_points"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/vp_fragment_main"
                android:layout_marginBottom="8px"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_center_fragment_main"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:orientation="vertical"
        android:background="@drawable/main_card"
        android:layout_below="@id/vp_fragment_main"
        android:layout_margin="12px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_wind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="34.5px"
                        android:layout_height="34.5px"
                        android:src="@drawable/main_wind"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="风云策略"
                        android:textColor="#FFF6A623"
                        android:textSize="12px"
                        android:layout_marginLeft="5.7px"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_tactics"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="34.5px"
                        android:layout_height="34.5px"
                        android:src="@drawable/main_tactics"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI策略  "
                        android:textColor="#FF9012FE"
                        android:textSize="12px"
                        android:layout_marginLeft="5.7px"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_skill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="34.5px"
                        android:layout_height="34.5px"
                        android:src="@drawable/main_skill"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技术超市"
                        android:textColor="#FFA66BB2"
                        android:textSize="12px"
                        android:layout_marginLeft="5.7px"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_simulate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="34.5px"
                        android:layout_height="34.5px"
                        android:src="@drawable/main_simulate"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模拟     "
                        android:textColor="#FF5BB1FE"
                        android:textSize="12px"
                        android:layout_marginLeft="5.7px"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="34.5px"
                        android:layout_height="34.5px"
                        android:src="@drawable/main_new"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新闻     "
                        android:textColor="#FF9B9B9B"
                        android:textSize="12px"
                        android:layout_marginLeft="5.7px"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_match"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="34.5px"
                        android:layout_height="34.5px"
                        android:src="@drawable/main_match"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="比赛      "
                        android:textColor="#FFEC2D45"
                        android:textSize="12px"
                        android:layout_marginLeft="5.7px"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_gold_fragment_main"
                android:layout_width="match_parent"
                android:layout_height="36px"
                android:background="#ffffff"
                android:layout_below="@id/ll_center_fragment_main">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="16px"
    android:src="@drawable/mian_gold"
    android:layout_centerVertical="true"
    android:layout_marginLeft="9px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄金版块"
                    android:textColor="#E6121212"
                    android:textSize="12px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#f8f8f8"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_gold_fragment_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_gold_fragment_main"
                android:background="#ffffff"></android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/rl_invest_fragment_main"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_below="@id/rv_gold_fragment_main"
            android:background="#ffffff">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f8f8f8"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#f8f8f8"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="13px"
    android:src="@drawable/main_invest"
    android:layout_centerVertical="true"
    android:layout_marginLeft="12px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资策略"
                android:textColor="#E6121212"
                android:textSize="12px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"/>
        </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:background="#ffffff"
                android:id="@+id/rv_invest_fragment_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_invest_fragment_main"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>