<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#ff0000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公式"
        android:textColor="#FFFFFFFF"
        android:textSize="17px"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv_creat_fragment_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建"
        android:textColor="#FFFFFFFF"
        android:textSize="12px"
        android:padding="13px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_fragment_formula"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="#ffffff"
        app:tabIndicatorHeight="1px"
        app:tabIndicatorColor="#ff0000"
        app:tabTextColor="#40121212"
        app:tabSelectedTextColor="#ff0000"
        app:tabMode="fixed"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_formula"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>