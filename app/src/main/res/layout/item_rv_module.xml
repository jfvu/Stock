<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="90px"
    android:id="@+id/rl_all_list_module"
    android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f8f8f8"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f8f8f8"
        android:layout_alignParentBottom="true"/>
<ImageView
    android:layout_width="1px"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:layout_marginTop="20px"
    android:layout_marginBottom="20px"/>
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="航空航天"
        android:textColor="#E6121212"
        android:textSize="16px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2.67%"
        android:textColor="#E6FF0000"
        android:textSize="16px"
        android:layout_marginTop="31px"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中航重机"
        android:textColor="#E6121212"
        android:textSize="10px"
        android:layout_marginTop="53px"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71px"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.37"
            android:textColor="#E6121212"
            android:textSize="8px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.44%"
            android:textColor="#E6121212"
            android:textSize="8px"
            android:layout_marginLeft="19px"/>
    </LinearLayout>
</RelativeLayout>