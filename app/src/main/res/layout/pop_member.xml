<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="214px"
    android:background="#f8f8f8">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="46px"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认订单"
        android:textColor="#FF323232"
        android:textSize="16px" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="36px"
    android:layout_marginTop="1px"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="17px"
        android:layout_height="18px"
        android:src="@drawable/member_zhanghu"
        android:layout_marginLeft="12px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8px"
        android:text="1234567"
        android:textColor="#666B6B6B"
        android:textSize="14px"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:src="@drawable/member_time"
            android:layout_marginLeft="12px"/>
        <CheckBox
            android:layout_width="56px"
            android:layout_height="24px"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/select_member_check"
            android:textColor="@drawable/select_member_checkfont"
            android:text="3个月"
            android:textSize="14px"
            android:layout_marginLeft="8px"/>
        <CheckBox
            android:layout_width="56px"
            android:layout_height="24px"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/select_member_check"
            android:textColor="@drawable/select_member_checkfont"
            android:text="6个月"
            android:textSize="14px"
            android:layout_marginLeft="24px"/>
        <CheckBox
            android:layout_width="56px"
            android:layout_height="24px"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/select_member_check"
            android:textColor="@drawable/select_member_checkfont"
            android:text="9个月"
            android:textSize="14px"
            android:layout_marginLeft="24px"/>
        <CheckBox
            android:layout_width="56px"
            android:layout_height="24px"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/select_member_check"
            android:textColor="@drawable/select_member_checkfont"
            android:text="12个月"
            android:textSize="14px"
            android:layout_marginLeft="24px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:layout_marginTop="1px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:src="@drawable/member_money"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:text="117"
            android:textColor="#ff0000"
            android:textSize="14px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#FF141414"
            android:textSize="14px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <Button
            android:id="@+id/btn_sure_pop_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_member_surebg"
            android:layout_margin="12px"
            android:text="立即支付"
            android:textColor="#FFFFFFFF"
            android:textSize="14px"/>
    </LinearLayout>
</LinearLayout>