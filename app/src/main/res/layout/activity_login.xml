<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.LoginActivity"
    android:background="#ffffff">
<LinearLayout
    android:id="@+id/ll_status_activity_login"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_status_activity_login"
        android:layout_marginTop="64px"/>
    <LinearLayout
        android:id="@+id/ll_zhanghu_activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_status_activity_login"
        android:orientation="vertical"
        android:layout_marginTop="240px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_zhanghu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="#40121212"
                android:textSize="17px"
                android:layout_centerVertical="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#40323232"
            android:layout_marginTop="5px"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mima_activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_zhanghu_activity_login"
        android:orientation="vertical"
        android:layout_marginTop="16px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="58px"
        android:layout_marginRight="58px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_mima"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="#40121212"
                android:textSize="17px"
                android:layout_centerVertical="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#40323232"
            android:layout_marginTop="5px"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login_activity_login"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="@drawable/shape_login"
        android:layout_below="@id/ll_mima_activity_login"
        android:layout_marginTop="36px"
        android:layout_marginRight="78px"
        android:layout_marginLeft="78px"
        android:text="登录"
        android:textColor="#FFFF0000"
        android:textSize="18px"/>
    <LinearLayout
        android:id="@+id/ll_register_activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_login_activity_login"
        android:layout_marginTop="36px">
<TextView
    android:id="@+id/tv_register_activity_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="注册账户"
    android:textColor="#FFFF0000"
    android:textSize="16px"
    android:layout_marginLeft="16px"
    android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_forget_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码"
            android:textColor="#40121212"
            android:textSize="16px"
            android:gravity="end"
            android:layout_marginRight="16px"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_other_activity_login"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_register_activity_login"
        android:layout_marginTop="35px">
        <TextView
            android:id="@+id/tv_other_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:textColor="#40121212"
            android:textSize="16px"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_toLeftOf="@id/tv_other_activity_login"
            android:layout_marginLeft="11px"
            android:layout_marginRight="2px"
            android:layout_centerVertical="true"
            android:background="#40121212"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_toRightOf="@id/tv_other_activity_login"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2px"
            android:layout_marginRight="11px"
            android:background="#40121212"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:layout_below="@id/ll_other_activity_login"
        android:orientation="horizontal"
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/login_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textColor="#666B6B6B"
                android:textSize="14px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_wx"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="#666B6B6B"
                android:textSize="14px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_wb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:textColor="#666B6B6B"
                android:textSize="14px"
                android:layout_marginTop="5px"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
