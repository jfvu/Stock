<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/rl_title_fragment_stock"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#ff0000">
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_title_fragment_stock"
        android:layout_width="184px"
        android:layout_height="24px"
        android:layout_centerInParent="true"
        app:tabIndicatorHeight="0px"
        app:tabTextColor="#ffffff"
        app:tabMode="fixed"
        app:tabBackground="@drawable/select_stock_tab_bg"
        android:background="@drawable/shape_stock_tabbg">
    </android.support.design.widget.TabLayout>
</RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_stock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title_fragment_stock">
    </android.support.v4.view.ViewPager>
</RelativeLayout>