<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.stock.ui.activity.ChatActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_chat"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000"
        android:layout_below="@id/ll_status_activity_chat">
        <ImageView
            android:id="@+id/img_return_activity_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX直播间"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只看楼主"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:padding="13px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_face"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="12px"
            android:src="@drawable/room_face"/>
        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="28px"
            android:layout_height="28px"
            android:src="@drawable/room_picture"
            android:layout_marginLeft="12px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_login"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px">
            <ImageView
                android:id="@+id/img_send"
                android:layout_width="18px"
                android:layout_height="18px"
                android:src="@drawable/room_send"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16px"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="12px"
                android:hint="我来说一说"
                android:textColorHint="#40121212"
                android:textSize="14px"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
