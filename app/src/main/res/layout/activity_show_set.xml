<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.stock.ui.activity.ShowSetActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_showset"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ff0000">
        <ImageView
            android:id="@+id/img_return_activity_showset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示设置"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"
        android:layout_marginTop="8px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排名显示"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginLeft="16px"/>
<EditText
    android:layout_width="120px"
    android:layout_height="24px"
    android:background="@drawable/shape_editbg"
    android:layout_marginLeft="8px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginLeft="5px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_1_activity_showset"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOffColor="#f8f8f8"
            app:tbOnColor="#ff0000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"
            />
    </LinearLayout>
    
</LinearLayout>
